{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "block/text-box",
	"version": "0.1.0",
	"title": "text box",
	"category": "text",
	"description": "creating blocks",
	"keywords": ["text","paragraph","box"],
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true
		},
		"spacing": {
			"padding": true
		}
	},
	"styles": [
		{
		"name": "squared",
		"label": "Squared",
		"isDefault": true
		},
		{
			"name": "rounded",
			"label": "rounded"
		}
	],
	"textdomain": "text-box",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"attributes": {
		"text": {
			"type": "string",
			"source": "html",
			"selector": "h4"
		},
		"alignment":{
			"type": "string",
			"default": "left"
		},
		"backgroundColor": {
			"type": "string",
			"default": "contrast"
		},
		"textColor": {
			"type": "string",
			"default": "base-2"
		},
		"style": {
			"type": "object",
			"default": {
				"spacing": {
					"padding": {"top": "50px","right": "50px",
						"bottom": "50px","left": "50px"}
				}
			}
		},
		"shadow": {
			"type": "boolean",
			"default": false
		},
		"shadowOpacity": {
			"type": "number",
			"default": 30
		}
	}
}
